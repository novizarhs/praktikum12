#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
    int d[4][4],e[4][4],f[4][4],ordo;
    cout<<"Inputkan ordo matriks : ";
    cin>>ordo;
    cout<<"Matriks A : "<< endl;
    for(int i=1;i<=ordo;i++){
       for(int j=1;j<=ordo;j++)
	   {
         cout<<"Elemen "<<i<<","<<j<<" : ";
         cin>>d[i][j];
       }
    }
	cout << endl;
    cout <<"Matriks B : "<< endl;
    for(int i=1;i<=ordo;i++)
	{
       for(int j=1;j<=ordo;j++)
	   {
         cout<<"Elemen "<<i<<","<<j<<" : ";
         cin>>e[i][j];
       }
     }

    //perhitungan penjumlahan matriks
    for(int i=1;i<=ordo;i++)
       for(int j=1;j<=ordo;j++)
          f[i][j]=d[i][j]+e[i][j];
	
	cout << endl;
    cout<<"Hasil penjumlahan : "<< endl;
    for(int i=1;i<=ordo;i++)
	{
       for(int j=1;j<=ordo;j++)
          cout<<f[i][j]<<" ";
      cout<<endl;
    }
	cout << endl;
	cout <<"Sekian dari Program saya ....... "<< endl << endl;
	cout <<"Terima Kasih by N.H.S 6(^_^)9"<< endl << endl;
   getch();
   return 0;
}
